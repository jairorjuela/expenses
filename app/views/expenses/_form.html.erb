<%= form_for(@expense, remote: true, :html => { :role => "form" }) do |f| %>
  <div id="error_explanation" class="bg-danger text-danger">
  </div>

<div class="modal-body">

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :name, :class => "control-label" %>
        <%= f.text_field :name, :class => "form-control first_input", :autocomplete => :off, id: "expense_name" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :amount, :class => "control-label" %>
        <%= f.text_field :amount, :class => "form-control", :autocomplete => :off %>
      </div>
      <div class="form-group">
        <%= f.label :date_expense, :class => "control-label" %>
        <%= f.date_field :date_expense, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.collection_select(:category_id, Category.all, :id, :name) %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.collection_select(:purchase_id, Purchase.all, :id, :name_purchases ) %>
      </div>
    </div>
  </div>
</div>

<div class="modal-footer">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-group">
        <%= f.submit  @expense.new_record? ? "Create Create" : "Update Expense", :class => "btn btn-primary" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
<% end %>
