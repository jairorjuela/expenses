<div class="container">
  <div class="row">
    <div class="total-box col-md-3">
      $ <%= @today.to_i %>
      <span>HOY</span>
    </div>
    <div class="total-box col-md-3">
      $ <%= @yesterday.to_i %>
      <span>AYER</span>
    </div>
    <div class="total-box col-md-3">
      $ <%= @this_month.to_i %>
      <span>ESTE MES</span>
    </div>
    <div class="total-box col-md-3">
      $ <%= @last_month.to_i %>
      <span>MES PASADO</span>
    </div>
  </div>

  <div class="row" style="margin-top: 40px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Últimos 6 Meses</div>
        <div class="panel-body">
          <div id="last_six_months" style="height: 250px;">
          </div>
        </div>
      </div>
    </div>
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Día</div>
        <div class="panel-body">
          <div id="by_today" style="height: 250px;">
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row" style="margin-top: 10px;">
    <div class="box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Por Categoría</div>
        <div class="panel-body">
          <div id="by_category" style="height: 250px;">
          </div>
        </div>
      </div>
    </div>
    <div class=" box col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">Acumulado</div>
        <div class="panel-body">
          <div id="acum" style="height: 250px;"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  new Charts();
</script>
